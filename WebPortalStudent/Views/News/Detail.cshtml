@{
    ViewData["Title"] = "Tin tổng hợp";
    var ListNewData = ViewBag.resListNewData as IEnumerable<M_News>;
    var NewData = ViewBag.resNewData as M_News;
    var NewsCategory = ViewBag.dataNewsCategory as IEnumerable<M_NewsCategory>;
}
@section Styles{
    <partial name="_P_StylesTableAndFormBasic" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/style_categorypage.css" rel="stylesheet" asp-append-version="true" />
}
@section Scripts{
    <partial name="_P_ScriptsTableAndFormBasic" />
}

<div class="banner-area text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="banner-content-wrapper">
                    <div class="banner-content">
                        <h2>Tin tức</h2>
                        <div class="banner-breadcrumb">
                            <ul>
                                <li><a href="/">Trang chủ </a>/</li>
                                <li>Tin tức</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="teacher-area text-center pt-90 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <h2>@NewData.title</h2>
                </div>
            </div>
        </div>
        <div>
            <div >
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="sn-container">
                                <div class="sn-img">
                                    <img src="@NewData.avatarurl" />
                                </div>
                                <div class="sn-content">
                                    <h1 class="sn-title">
                                        @NewData.title
                                    </h1>
                                    <div>@Html.Raw(NewData.detail)</div>
                                </div>
                            </div>
                            <div class="sn-related">
                                <h2>Tin tức mới</h2>
                                <div class="row sn-slider">
                                    @foreach (var item in ListNewData)
                                    {
                                        <div class="col-md-4">
                                            <div class="sn-img">
                                                <img src="@item.avatarurl" />
                                                <div class="sn-title">
                                                    <a asp-controller="News" asp-action="Detail" asp-route-id="@item.id" asp-route-titleslug="@item.titleSlug">@item.title</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="sidebar">
                                <div class="sidebar-widget">
                                    <h2 class="sw-title">Tin tức liên quan</h2>
                                    <div class="news-list">
                                        @foreach (var item in ListNewData)
                                        {
                                            <div class="nl-item">
                                                <div class="nl-img">
                                                    <img src="@item.avatarurl" style="width:150px; height:90px; " />
                                                </div>
                                                <div class="nl-title">
                                                    <a asp-controller="News" asp-action="Detail" asp-route-id="@item.id" asp-route-titleslug="@item.titleSlug">@item.title</a>
                                                    <br/>
                                                    <p>@item.createdAt</p>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="sidebar-widget">
                                    <h2 class="sw-title">Danh mục tin tức</h2>
                                    <div class="category">
                                        <ul>
                                            @foreach (var item in NewsCategory)
                                            {
                                                <li><a asp-controller="News" asp-action="Index" asp-route-category="@item.Id"><i class='bx bx-right-arrow-alt'></i>  @item.Name <span>()</span></a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                                <div class="sidebar-widget">
                                    <h2 class="sw-title">Chủ đề liên quan</h2>
                                    <div class="tags">
                                        <a href="" style="background-color:#0026ff">National</a>
                                        <a href="" style="background-color:#b200ff">International</a>
                                        <a href="" style="background-color:#6d3c63">Economics</a>
                                        <a href="" style="background-color:#e2c76b">Politics</a>
                                        <a href="" style="background-color:#4cad7d">Lifestyle</a>
                                        <a href="" style="background-color:#d35d3f">Technology</a>
                                        <a href="" style="background-color:#74643a">Trades</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


