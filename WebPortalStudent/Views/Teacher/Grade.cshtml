
@{
    ViewData["Title"] = "Lớp học";
    var dataGrade = ViewBag.dataGrade as IEnumerable<M_Grade>;
}

<div class="activities-area text-center pt-90 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <h2>Các lớp học nổi bật</h2>
                    <p>Các lớp hiện đang có và mở tại trường</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in dataGrade)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-class text-center">
                        <div class="class-img">
                            <img src="~/assets/images/class/1.jpg" alt="class">
                            <div class="event-hover">
                                <a class="img-poppu" href="~/assets/images/class/1.jpg"><i class="icofont icofont-link-alt"></i></a>
                            </div>
                        </div>
                        <div class="class-content">
                            <h3>@item.name</h3>
                            <ul>
                                <li>Giáo viên<span>@item.teacherObj.firstName</span></li>
                                <li>Số luượng<span>24</span></li>
                                <li>phí<span>270$</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
