@{
    ViewData["Title"] = "Giảng viên";
    var data = ViewBag.data as IEnumerable<M_TeacherSubject>;
}
@section Styles{
    <partial name="_P_StylesTableAndFormBasic" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/style_categorypage.css" rel="stylesheet" asp-append-version="true" />
}
@section Scripts{
    <partial name="_P_ScriptsTableAndFormBasic" />
    <script src="~/controllers/teacher_manage.js" asp-append-version="true"></script>
}

<div class="banner-area text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="banner-content-wrapper">
                    <div class="banner-content">
                        <h2>Giảng viên</h2>
                        <div class="banner-breadcrumb">
                            <ul>
                                <li><a href="/">Trang chủ </a> /</li>
                                <li>Giáo Viên</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="teacher-area text-center pt-90 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <h2>Tất cả giáo viên</h2>
                    <p style="text-align:center">Có rất nhiều giáo viên thuộc các ngành nghề và lĩnh vực khác nhau</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in data)
                    {
                        <div class="col-lg-4 ">
                            <div class="single-teacher mb-30">
                                <div class="teacher-img">
                                    <img src=@item.teacherObj.avatarUrl alt="teacher" style="height:250px; width:100%; object-fit:cover" data-bs-toggle="modal" data-bs-target="#modal_@item.id"/>
                                    <div class="teacher-content">
                                        <h3>@item.teacherObj.lastName @item.teacherObj.firstName</h3>
                                        <p class="float-end m-2">Giáo viên @item.subjectObj.Name</p>
                                        <div class="teacher-hover">
                                            <ul>
                                                <li><a href="https://www.facebook.com/"><i class="icofont icofont-social-facebook"></i></a></li>
                                                <li><a href="#"><i class="icofont icofont-social-google-plus"></i></a></li>
                                                <li><a href="https://www.pinterest.com/"><i class="icofont icofont-social-pinterest"></i></a></li>
                                                <li><a href="https://twitter.com/"><i class="icofont icofont-social-twitter"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade bd-example-modal-xl " id="modal_@item.id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-xl pt-100">
                                        <div class="modal-content text-white align-items-center" style="background-image: url('assets/images/background-modal.jpg'); ">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container">
                                                    <div class="session-title row pt-20">
                                                        <h2 class="text-uppercase text-white">THÔNG TIN THÊM</h2>
                                                        <div class="heading-line text-white"></div>
                                                    </div>
                                                    <div class="about-row row">
                                                        <div class="image-col col-md-4 pt-60">
                                                            @*<img src="@item.avatarUrl" alt="avater">*@
                                                        </div>
                                                        <div class="detail-col col-md-8">
                                                            <h2 class="text-white">@item.teacherObj.lastName @item.teacherObj.firstName</h2>
                                                            <p class="text-white">
                                                                <em>
                                                                    There are many variations of passages of Lorem Ipsum available but the majority is have suffered alteration in that some form by
                                                                    injected humour or randomised that words which don't look even slightly believable. If you are going a to use a passage of Lorem
                                                                    Ipsum you need to be sure there isn't anything embarrassing. There are is many variations of passages available.
                                                                </em>
                                                            </p>
                                                            <div class="row">
                                                                <div class="col-md-6 col-12">
                                                                    <div class="info-list">
                                                                        <ul>
                                                                            <li><span>Ngày sinh: </span>@item.teacherObj.birthDay?.ToString("dd/MM/yyyy")</li>
                                                                            <li><span>Thành phố: </span>Việt Nam</li>
                                                                            <li><span>Môn giảng dạy: </span>@item.subjectObj.Name</li>
                                                                            <li><span>Website: </span>www.smarteyeapps.com</li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6 col-12">
                                                                    <div class="info-list">
                                                                        <ul>
                                                                            <li><span>Tuổi: </span>@(item.teacherObj.birthDay!=null ? (DateTime.Now.Year - item.teacherObj.birthDay.Value.Year): null )</li>
                                                                            <li><span>Bằng cấp: </span>Master</li>
                                                                            <li><span>Địa chỉ mail: </span>@item.teacherObj.email</li>
                                                                            <li><span>Số điện thoại: </span>@item.teacherObj.phoneNumber</li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer border-0 w-100">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>    
        </div>
    </div>
</div>
