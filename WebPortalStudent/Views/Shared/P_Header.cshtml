@{
    var dataNewscategory = ViewBag.Newscategory as IEnumerable<M_NewsCategory>;
}
@section Styles{
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
}
@section Scripts{
    <script src="~/js/site.js" asp-append-version="true"></script>
}
<header class="header-area sticker" id="topnav">
    <div class="header-wrapper header-padding">
        <div class="header-top hidden-xs">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="top-left">
                            <ul>
                                <li><i class="icofont icofont-ui-call"></i>0123456789</li>
                                <li><i class="icofont icofont-ui-clock"></i> Thứ hai đến thứ bảy: 8.00 - 12.00</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="main-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="logo">
                            <a href="index.html">
                                <img src="~/assets/images/logo/logo.png" alt="kidschool">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="content-wrapper">
                            <div class="main-menu text-right">
                                <nav>
                                    <ul class="navigation-menu menu">
                                        <li>
                                            <a asp-controller="Home" asp-action="Index">TRANG CHỦ </a>
                                        </li>
                                        <li class="hidden-sm">
                                            <a asp-controller="Teacher" asp-action="Index">GIẢNG VIÊN</a>
                                        </li>
                                        <li>
                                            <div class="dropdown">
                                                <a class="dropdown-toggle" href="#" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    TIN TỨC
                                                </a>
                                                <div class="dropdown-menu " aria-labelledby="dropdownMenuButton" style=" background-color: #F1F1F1 !important; width: 250px; padding-left: 60px">

                                                    <a class="dropdown-item w-100 " asp-controller="News" asp-action="Index" style="font-size: 20px; padding: 10px 10px;">Tin mới</a>
                                                    @if (dataNewscategory != null)
                                                    {
                                                        @foreach (var items in dataNewscategory)
                                                        {
                                                            <a class="dropdown-item w-100 mr-5" asp-controller="News" asp-action="Index" asp-route-category="@items.Id" style="font-size:20px; padding:10px 10px;">@items.Name</a>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </li>

                                    </ul>
                                </nav>
                            </div>
                            <div class="mobile-menu hidden-lg hidden-md hidden-sm"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>